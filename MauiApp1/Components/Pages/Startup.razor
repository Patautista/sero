@page "/"
@using Business.Interfaces
@using MauiApp1.Services
@using MauiApp1.Services.Seed

@code {
    [Inject] private ISettingsService SettingsService { get; set; }
    [Inject] private NavigationManager Nav { get; set; }
    [Inject] private MobileDbContextInitialiser Init { get; set; }

    protected override async Task OnInitializedAsync()
    {
        // Optionally seed DB only if needed (or move to onboarding)
        // await Init.SeedAsync();

        if (!IsOnboardingComplete)
        {
            Nav.NavigateTo("/onboarding", true);
        }
        else
        {
            Nav.NavigateTo($"/{Routes.SessionSelect}", true);
        }
    }

    private bool IsOnboardingComplete =>
        SettingsService.StudyConfig.Value != null;
}