@inherits SmartComponent

<h3 class="mb-4">📊 <Translate Text="Estatísticas"></Translate></h3>

@if (isLoading)
{
    <LoadingSpinner></LoadingSpinner>
}
else
{
    <div class="p-6 md:p-8 bg-gray-100 min-h-screen">

        <!-- Vocab by Part of Speech Accordion -->
        <div class="col-span-1 md:col-span-2 bg-white rounded-xl shadow-lg p-6">
            <div class="flex flex-row gap-2 mb-3 items-center cursor-pointer select-none" @onclick="() => showVocabDetails = !showVocabDetails">
                <h4 class="text-lg font-semibold text-gray-700 mb-4 flex-1">
                    🔤 <Translate Text="Vocabulário Estimado"></Translate>
                </h4>
                <p class="text-xl font-bold text-indigo-600">@vocabularyCount</p>
                <span class="ml-2 text-gray-500">
                    @(showVocabDetails ? "▼" : "►")
                </span>
            </div>
            @if (showVocabDetails)
            {
                @if (vocabByPos?.Any() == true)
                {
                    <table class="w-full table-auto border-collapse">
                        <thead class="bg-indigo-100 text-indigo-800">
                            <tr>
                                <th class="px-4 py-2 text-left rounded-tl-lg"><Translate Text="Classe Gramatical"></Translate></th>
                                <th class="px-4 py-2 text-right rounded-tr-lg"><Translate Text="Quantidade"></Translate></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kv in vocabByPos.OrderByDescending(x => x.Value))
                            {
                                <tr class="border-t border-gray-200">
                                    <td class="px-4 py-2"><Translate Text=@kv.Key Lang="en"></Translate></td>
                                    <td class="px-4 py-2 text-right">@kv.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-gray-500"><Translate Text="Analisando..."></Translate></p>
                }
            }
        </div>

        <!-- Responsive Grid Container -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mt-3">

            <!-- Stat Card 1: Average Time -->
            <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:shadow-2xl hover:scale-105">
                <h4 class="text-lg font-semibold text-gray-700 mb-2">⏱️ <Translate Text="Tempo Médio por Resposta"></Translate>)</h4>
                <p class="text-3xl font-bold text-indigo-600">@globalAvgTimeInSeconds.ToString("N2") s</p>
            </div>

            <!-- Stat Card 2: Skip Rate -->
            <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:shadow-2xl hover:scale-105">
                <h4 class="text-lg font-semibold text-gray-700 mb-2">📉 <Translate Text="Taxa de Skip"></Translate></h4>
                <p class="text-3xl font-bold text-indigo-600">@globalSkipRate.ToString("N1") %</p>
            </div>

            <!-- Metrics Table -->
            <div class="col-span-1 md:col-span-2 bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-semibold text-gray-700 mb-4">🃏 <Translate Text="Métricas de Card"></Translate></h4>
                <div class="overflow-x-auto">

                    <!-- Top 3 by Answer Time -->
                    <h5 class="text-md font-bold text-indigo-700 mb-2 mt-2">⏱️ <Translate Text="Top 3 por tempo de resposta"></Translate></h5>
                    <div class="block md:hidden">
                        @foreach (var card in topByTime)
                        {
                            <div class="bg-gray-50 rounded-lg shadow-sm p-4 mb-4">
                                <h5 class="text-sm font-bold text-gray-900 mb-2">ID: @card.CardId</h5>
                                <h5 class="text-sm font-bold text-gray-900 mb-2">@card.CardText</h5>
                                <ul class="text-sm text-gray-700 space-y-1">
                                    <li><strong><Translate Text="Tempo médio de resposta (s):"></Translate></strong> @card.AvgTimeSeconds.ToString("N2")</li>
                                    <li><strong># <Translate Text="Respostas:"></Translate></strong> @card.AnswerCount</li>
                                    <li><strong> <Translate Text="Taxa de acerto (%):"></Translate></strong> @card.CorrectAnswerRate.ToString("N1") %</li>
                                    <li><strong># <Translate Text="Skips:"></Translate></strong> @card.SkipCount</li>
                                    <li><strong><Translate Text="Taxa de skip (%):"></Translate></strong> @card.SkipRate.ToString("N1") %</li>
                                </ul>
                            </div>
                        }
                    </div>
                    <table class="w-full table-auto mt-3 border-collapse hidden md:table">
                        <thead class="bg-indigo-100 text-indigo-800">
                            <tr>
                                <th class="px-4 py-2 text-left rounded-tl-lg">ID</th>
                                <th class="px-4 py-2 text-left"><Translate Text="Frase"></Translate></th>
                                <th class="px-4 py-2 text-right"><Translate Text="Tempo médio de resposta (s)"></Translate></th>
                                <th class="px-4 py-2 text-right"># <Translate Text="Respostas"></Translate></th>
                                <th class="px-4 py-2 text-right"><Translate Text="Taxa de acerto (%)"></Translate></th>
                                <th class="px-4 py-2 text-right"># <Translate Text="Skips"></Translate></th>
                                <th class="px-4 py-2 text-right rounded-tr-lg"><Translate Text="Taxa de skip (%)"></Translate></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cardStat in topByTime)
                            {
                                <tr class="border-t border-gray-200 hover:bg-gray-50 transition-colors duration-150">
                                    <td class="px-4 py-2">@cardStat.CardId</td>
                                    <td class="px-4 py-2">@cardStat.CardText</td>
                                    <td class="px-4 py-2 text-right">@cardStat.AvgTimeSeconds.ToString("N2")</td>
                                    <td class="px-4 py-2 text-right">@cardStat.AnswerCount</td>
                                    <td class="px-4 py-2 text-right">@cardStat.CorrectAnswerRate.ToString("N1") %</td>
                                    <td class="px-4 py-2 text-right">@cardStat.SkipCount</td>
                                    <td class="px-4 py-2 text-right">@cardStat.SkipRate.ToString("N1") %</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Top 3 by Worst Hit Rate -->
                    <h5 class="text-md font-bold text-red-700 mb-2 mt-6">❌ <Translate Text="Top 3 por menor taxa de acerto"></Translate></h5>
                    <div class="block md:hidden">
                        @foreach (var card in topByWorstCorrectRate)
                        {
                            <div class="bg-gray-50 rounded-lg shadow-sm p-4 mb-4">
                                <h5 class="text-sm font-bold text-gray-900 mb-2">ID: @card.CardId</h5>
                                <h5 class="text-sm font-bold text-gray-900 mb-2">@card.CardText</h5>
                                <ul class="text-sm text-gray-700 space-y-1">
                                    <li><strong><Translate Text="Tempo médio de resposta (s):"></Translate></strong> @card.AvgTimeSeconds.ToString("N2")</li>
                                    <li><strong># <Translate Text="Respostas:"></Translate></strong> @card.AnswerCount</li>
                                    <li><strong> <Translate Text="Taxa de acerto (%):"></Translate></strong> @card.CorrectAnswerRate.ToString("N1") %</li>
                                    <li><strong># <Translate Text="Skips:"></Translate></strong> @card.SkipCount</li>
                                    <li><strong><Translate Text="Taxa de skip (%):"></Translate></strong> @card.SkipRate.ToString("N1") %</li>
                                </ul>
                            </div>
                        }
                    </div>
                    <table class="w-full table-auto mt-3 border-collapse hidden md:table">
                        <thead class="bg-indigo-100 text-indigo-800">
                            <tr>
                                <th class="px-4 py-2 text-left rounded-tl-lg">ID</th>
                                <th class="px-4 py-2 text-left"><Translate Text="Frase"></Translate></th>
                                <th class="px-4 py-2 text-right"><Translate Text="Tempo médio de resposta (s)"></Translate></th>
                                <th class="px-4 py-2 text-right"># <Translate Text="Respostas"></Translate></th>
                                <th class="px-4 py-2 text-right"><Translate Text="Taxa de acerto (%)"></Translate></th>
                                <th class="px-4 py-2 text-right"># <Translate Text="Skips"></Translate></th>
                                <th class="px-4 py-2 text-right rounded-tr-lg"><Translate Text="Taxa de skip (%)"></Translate></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cardStat in topByWorstCorrectRate)
                            {
                                <tr class="border-t border-gray-200 hover:bg-gray-50 transition-colors duration-150">
                                    <td class="px-4 py-2">@cardStat.CardId</td>
                                    <td class="px-4 py-2">@cardStat.CardText</td>
                                    <td class="px-4 py-2 text-right">@cardStat.AvgTimeSeconds.ToString("N2")</td>
                                    <td class="px-4 py-2 text-right">@cardStat.AnswerCount</td>
                                    <td class="px-4 py-2 text-right">@cardStat.CorrectAnswerRate.ToString("N1") %</td>
                                    <td class="px-4 py-2 text-right">@cardStat.SkipCount</td>
                                    <td class="px-4 py-2 text-right">@cardStat.SkipRate.ToString("N1") %</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pie Chart Section -->
            <div class="col-span-1 md:col-span-2 bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-semibold text-gray-700 mb-4">✅❌ <Translate Text="Total de respostas"></Translate>@Translate("")</h4>
                <RadzenChart>
                    <RadzenPieSeries Data="@generalAnswerBreakdown"
                                     CategoryProperty="Category"
                                     ValueProperty="Value">
                        <RadzenSeriesDataLabels Visible="true" />
                    </RadzenPieSeries>
                </RadzenChart>
            </div>

        </div>
    </div>

}

@code {
    // Add using for Catalyst

    public class Model
    {
        public record CardAnswered(
        Guid ReviewSessionId,
        int CardId,
        string CardNativeText,
        int EllapsedMs,
        bool Correct
    ) : DomainEvent;

        public record CardSkipped(
            Guid ReviewSessionId,
            string CardNativeText,
            int CardId
        ) : DomainEvent;

        public ICollection<CardAnswered> CardAnsweredData { get; set; }
        public ICollection<CardSkipped> CardSkippedData { get; set; }
    }

    private Model _model { get; set; }
    private bool isLoading = true;

    private double globalAvgTimeInSeconds;
    private double globalSkipRate;
    private List<ChartPoint> chartData = new();
    private List<CardStats> cardStats = new();
    private List<CardStats> topCardStats = new(); // Add this
    private List<CardStats> topByTime = new();
    private List<CardStats> topByWorstCorrectRate = new();

    // Dados dos gráficos de pizza
    private List<PiePoint> generalAnswerBreakdown = new();
    private List<PiePoint> perCardBreakdown = new();

    private int vocabularyCount;
    private Dictionary<string, int> vocabByPos = new();

    private bool showVocabDetails = false; // Accordion state

    protected override async Task OnInitializedAsync()
    {
        _model = await DatabaseService.GetDashboardModelAsync();

        // ---- Visão Geral ----
        if (_model.CardAnsweredData.Any())
            globalAvgTimeInSeconds = _model.CardAnsweredData.Average(a => a.EllapsedMs) / 1000D;

        var total = _model.CardAnsweredData.Count + _model.CardAnsweredData.Count;
        globalSkipRate = total > 0 ? _model.CardSkippedData.Count * 100.0 / total : 0;

        chartData = _model.CardAnsweredData
            .GroupBy(a => a.OccurredAtUtc.Date)
            .Select(g => new ChartPoint
            {
                Label = g.Key.ToShortDateString(),
                Value = g.Average(x => x.EllapsedMs)
            })
            .ToList();

        // ---- Métricas por Card ----
        var skipsByCard = _model.CardSkippedData
            .GroupBy(s => s.CardId)
            .ToDictionary(g => g.Key, g => g.Count());

        var correctAnswersByCard = _model.CardAnsweredData
            .Where(e => e.Correct)
            .GroupBy(s => s.CardId)
            .ToDictionary(g => g.Key, g => g.Count());

        cardStats = _model.CardAnsweredData
            .GroupBy(a => a.CardId)
            .Select(g =>
            {
                var skipCount = skipsByCard.ContainsKey(g.Key) ? skipsByCard[g.Key] : 0;
                var correctCount = correctAnswersByCard.ContainsKey(g.Key) ? correctAnswersByCard[g.Key] : 0;
                var answerCount = g.Count();
                var totalCount = answerCount + skipCount;

                return new CardStats
                {
                    CardId = g.Key,
                    CardText = g.First()?.CardNativeText ?? Translate("Card sem texto"),
                    AvgTimeSeconds = g.Average(x => x.EllapsedMs) / 1000D,
                    AnswerCount = answerCount,
                    SkipCount = skipCount,
                    CorrectAnswerRate = totalCount > 0 ? (correctCount * 100.0 / totalCount) : 0,
                    SkipRate = totalCount > 0 ? (skipCount * 100.0 / totalCount) : 0
                };
            })
            .OrderByDescending(c => c.AnswerCount + c.SkipCount)
            .ToList();


        // ---- Filter for Top Cards ----
        topByTime = cardStats.OrderByDescending(c => c.AvgTimeSeconds).Take(3).ToList();
        topByWorstCorrectRate = cardStats.OrderBy(c => c.CorrectAnswerRate).Take(3).ToList();

        topCardStats = topByTime
            .Concat(topByWorstCorrectRate)
            .GroupBy(c => c.CardId)
            .Select(g => g.First())
            .ToList();

        // ---- Gráfico Pizza Geral ----
        var correct = _model.CardAnsweredData.Count(e => e.Correct);
        var incorrect = _model.CardAnsweredData.Count - correct;

        generalAnswerBreakdown = new List<PiePoint>
        {
            new PiePoint { Category = Translate("Corretas"), Value = correct },
            new PiePoint { Category = Translate("Erradas"), Value = incorrect }
        };

        // ---- Vocabulário Estimado ----
        var allCardTexts = _model.CardAnsweredData.Select(c => c.CardNativeText).ToList();
        vocabularyCount = VocabularyService.GetVocabularyCount(allCardTexts);
        vocabByPos = await VocabularyService.GetVocabByPartOfSpeechAsync(allCardTexts);

        isLoading = false;
    }

    public class ChartPoint
    {
        public string Label { get; set; }
        public double Value { get; set; }
    }

    public class CardStats
    {
        public int CardId { get; set; }
        public string CardText { get; set; }
        public double AvgTimeSeconds { get; set; }
        public int AnswerCount { get; set; }
        public int SkipCount { get; set; }
        public double SkipRate { get; set; }
        public double CorrectAnswerRate { get; set; }
    }

    public class PiePoint
    {
        public string Category { get; set; }
        public int Value { get; set; }
    }
}