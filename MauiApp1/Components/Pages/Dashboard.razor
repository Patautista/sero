@page "/dashboard"
@using Catalyst
@using Catalyst;
@using Domain.Events
@using Infrastructure.Services
@using Infrastructure.Services.Vocab
@using Infrastructure.Vocab
@using MauiApp1.Services
@using Mosaik.Core
@using Mosaik.Core;
@using Radzen
@inject VocabularyService VocabularyService
