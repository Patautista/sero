@page "/dashboard"
@using Domain.Events
@using MauiApp1.Services
@using Radzen
@inject DatabaseService Database

<h3 class="mb-4">📊 Dashboard de Revisões</h3>

@if (_model == null)
{
    <LoadingSpinner></LoadingSpinner>
}
else
{
    <div class="p-6 md:p-8 bg-gray-100 min-h-screen">

        <!-- Responsive Grid Container -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">

            <!-- Stat Card 1: Average Time -->
            <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:shadow-2xl hover:scale-105">
                <h4 class="text-lg font-semibold text-gray-700 mb-2">⏱️ Tempo Médio por Resposta</h4>
                <p class="text-3xl font-bold text-indigo-600">@globalAvgTimeInSeconds.ToString("N2") s</p>
            </div>

            <!-- Stat Card 2: Skip Rate -->
            <div class="bg-white rounded-xl shadow-lg p-6 transition-all duration-300 hover:shadow-2xl hover:scale-105">
                <h4 class="text-lg font-semibold text-gray-700 mb-2">📉 Taxa de Skip</h4>
                <p class="text-3xl font-bold text-indigo-600">@globalSkipRate.ToString("N1") %</p>
            </div>

            <!-- Metrics Table -->
            <div class="col-span-1 md:col-span-2 bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-semibold text-gray-700 mb-4">🃏 Métricas de Card</h4>
                <div class="overflow-x-auto">
                    <!-- Mobile Card View -->
                    <div class="block md:hidden">
                        @foreach (var card in cardStats)
                        {
                            <div class="bg-gray-50 rounded-lg shadow-sm p-4 mb-4">
                                <h5 class="text-sm font-bold text-gray-900 mb-2">ID: @card.CardId</h5>
                                <h5 class="text-sm font-bold text-gray-900 mb-2">@card.CardText</h5>

                                <ul class="text-sm text-gray-700 space-y-1">
                                    <li><strong>Tempo médio de resposta (s):</strong> @card.AvgTimeSeconds.ToString("N2")</li>
                                    <li><strong># Respostas:</strong> @card.AnswerCount</li>
                                    <li><strong>Taxa de acerto (%):</strong> @card.CorrectAnswerRate.ToString("N1") %</li>
                                    <li><strong># Skips:</strong> @card.SkipCount</li>
                                    <li><strong>Taxa de skip (%):</strong> @card.SkipRate.ToString("N1") %</li>
                                </ul>
                            </div>
                        }
                    </div>

                    <!-- Desktop Table View -->
                    <table class="w-full table-auto mt-3 border-collapse hidden md:table">
                        <thead class="bg-indigo-100 text-indigo-800">
                            <tr>
                                <th class="px-4 py-2 text-left rounded-tl-lg">ID</th>
                                <th class="px-4 py-2 text-left">Frase</th>
                                <th class="px-4 py-2 text-right">Tempo médio de resposta (s)</th>
                                <th class="px-4 py-2 text-right"># Respostas</th>
                                <th class="px-4 py-2 text-right">Taxa de acerto (%)</th>
                                <th class="px-4 py-2 text-right"># Skips</th>
                                <th class="px-4 py-2 text-right rounded-tr-lg">Taxa de skip (%)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cardStat in cardStats)
                            {
                                <tr class="border-t border-gray-200 hover:bg-gray-50 transition-colors duration-150">
                                    <td class="px-4 py-2">@cardStat.CardId</td>
                                    <td class="px-4 py-2">@cardStat.CardText</td>
                                    <td class="px-4 py-2 text-right">@cardStat.AvgTimeSeconds.ToString("N2")</td>
                                    <td class="px-4 py-2 text-right">@cardStat.AnswerCount</td>
                                    <td class="px-4 py-2 text-right">@cardStat.CorrectAnswerRate.ToString("N1") %</td>
                                    <td class="px-4 py-2 text-right">@cardStat.SkipCount</td>
                                    <td class="px-4 py-2 text-right">@cardStat.SkipRate.ToString("N1") %</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Chart Section -->
            <div class="col-span-1 md:col-span-2 bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-semibold text-gray-700 mb-4">📅 Respostas ao longo do tempo</h4>
                <RadzenChart>
                    <RadzenLineSeries Smooth="true" Data="@chartData" CategoryProperty="@nameof(ChartPoint.Label)" ValueProperty="@nameof(ChartPoint.Value)" Title="2023" LineType="LineType.Dashed">
                        <RadzenMarkers Visible="true" MarkerType="MarkerType.Square" />
                        <RadzenSeriesDataLabels Visible="true" />
                    </RadzenLineSeries>
                    <RadzenCategoryAxis Padding="20" />
                    <RadzenValueAxis>
                        <RadzenGridLines Visible="true" />
                        <RadzenAxisTitle Text="Cards Answered" />
                    </RadzenValueAxis>
                </RadzenChart>
            </div>

            <!-- Pie Chart Section -->
            <div class="col-span-1 md:col-span-2 bg-white rounded-xl shadow-lg p-6">
                <h4 class="text-lg font-semibold text-gray-700 mb-4">✅❌ Total de respostas</h4>
                <RadzenChart>
                    <RadzenPieSeries Data="@generalAnswerBreakdown"
                                     CategoryProperty="Category"
                                     ValueProperty="Value">
                        <RadzenSeriesDataLabels Visible="true" />
                    </RadzenPieSeries>
                </RadzenChart>
            </div>

        </div>
    </div>

}

@code {
    public class Model
    {
        public record CardAnswered(
        Guid ReviewSessionId,
        int CardId,
        string CardNativeText,
        int EllapsedMs,
        bool Correct
    ) : DomainEvent;

        public record CardSkipped(
            Guid ReviewSessionId,
            string CardNativeText,
            int CardId
        ) : DomainEvent;

        public ICollection<CardAnswered> CardAnsweredData { get; set; }
        public ICollection<CardSkipped> CardSkippedData { get; set; }
    }

    private Model _model { get; set; }

    private double globalAvgTimeInSeconds;
    private double globalSkipRate
    ;
    private List<ChartPoint> chartData = new();
    private List<CardStats> cardStats = new();

    // Dados dos gráficos de pizza
    private List<PiePoint> generalAnswerBreakdown = new();
    private List<PiePoint> perCardBreakdown = new();

    protected override async Task OnInitializedAsync()
    {

        _model = await DatabaseService.GetDashboardModelAsync();


        // ---- Visão Geral ----
        if (_model.CardAnsweredData.Any())
            globalAvgTimeInSeconds = _model.CardAnsweredData.Average(a => a.EllapsedMs) / 1000D;

        var total = _model.CardAnsweredData.Count + _model.CardAnsweredData.Count;
        globalSkipRate = total > 0 ? _model.CardSkippedData.Count * 100.0 / total : 0;

        chartData = _model.CardAnsweredData
            .GroupBy(a => a.OccurredAtUtc.Date)
            .Select(g => new ChartPoint
            {
                Label = g.Key.ToShortDateString(),
                Value = g.Average(x => x.EllapsedMs)
            })
            .ToList();

        // ---- Métricas por Card ----
        var skipsByCard = _model.CardSkippedData
            .GroupBy(s => s.CardId)
            .ToDictionary(g => g.Key, g => g.Count());

        var correctAnswersByCard = _model.CardAnsweredData
            .Where(e => e.Correct)
            .GroupBy(s => s.CardId)
            .ToDictionary(g => g.Key, g => g.Count());

        cardStats = _model.CardAnsweredData
            .GroupBy(a => a.CardId)
            .Select(g =>
            {
                var skipCount = skipsByCard.ContainsKey(g.Key) ? skipsByCard[g.Key] : 0;
                var correctCount = correctAnswersByCard.ContainsKey(g.Key) ? correctAnswersByCard[g.Key] : 0;
                var answerCount = g.Count();
                var totalCount = answerCount + skipCount;

                return new CardStats
                {
                    CardId = g.Key,
                    CardText = g.First()?.CardNativeText ?? "Card sem texto",
                    AvgTimeSeconds = g.Average(x => x.EllapsedMs) / 1000D,
                    AnswerCount = answerCount,
                    SkipCount = skipCount,
                    CorrectAnswerRate = totalCount > 0 ? (correctCount * 100.0 / totalCount) : 0,
                    SkipRate = totalCount > 0 ? (skipCount * 100.0 / totalCount) : 0
                };
            })
            .OrderByDescending(c => c.AnswerCount + c.SkipCount)
            .ToList();

        // ---- Gráfico Pizza Geral ----
        var correct = _model.CardAnsweredData.Count(e => e.Correct);
        var incorrect = _model.CardAnsweredData.Count - correct;

        generalAnswerBreakdown = new List<PiePoint>
        {
            new PiePoint { Category = "Corretas", Value = correct },
            new PiePoint { Category = "Erradas", Value = incorrect }
        };
    }

    public class ChartPoint
    {
        public string Label { get; set; }
        public double Value { get; set; }
    }

    public class CardStats
    {
        public int CardId { get; set; }
        public string CardText { get; set; }
        public double AvgTimeSeconds { get; set; }
        public int AnswerCount { get; set; }
        public int SkipCount { get; set; }
        public double SkipRate { get; set; }
        public double CorrectAnswerRate { get; set; }
    }

    public class PiePoint
    {
        public string Category { get; set; }
        public int Value { get; set; }
    }
}
