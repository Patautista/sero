@page "/wikt"
@using Infrastructure.Lookup

<input @bind="searchWord" placeholder="Enter a word" />
<button @onclick="Search">Lookup conjugation (Wiktionary)</button>

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Results for "@searchWord"</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(conjugationHtml))
                    {
                        @((MarkupString)conjugationHtml)
                    }
                    else
                    {
                        <p>No results found</p>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string searchWord;
    private string conjugationHtml;
    private bool showModal = false;

    private async Task Search()
    {
        var client = new WiktionaryClient();

        conjugationHtml = await client.GetHtmlVerbInflectionTable(searchWord);
        showModal = true;
    }
    private void CloseModal()
    {
        showModal = false;
    }
}
