@page "/dict"
@using Infrastructure.Lookup
@using Infrastructure.Interfaces
@using Infrastructure.Services
@inject NavigationManager Navigation
@inherits SmartComponent

<div class="gap-2 p-2">
    <h3 class="mb-3"><Translate Text="Dicionário (Dict.cc)" /></h3>
    <ButtonPrimary OnClick="OpenModal"><Translate Text="Buscar" /></ButtonPrimary>
</div>

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @if (isSearching)
                        {
                            <Translate Text="Digite o termo de busca" />
                        }
                        else
                        {
                            <Translate Text="Resultados para " />
                            @searchWord
                        }
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (isSearching)
                    {
                        <div class="mb-3">
                            <input id="searchInput" 
                                   class="form-control" 
                                   @bind="searchWord" 
                                   @bind:event="oninput"
                                   @onkeypress="HandleKeyPress"
                                   placeholder="@Translate("Escreva uma palavra")" 
                                   autofocus />
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal"><Translate Text="Cancelar" /></button>
                            <ButtonPrimary OnClick="Search" Disabled="@(string.IsNullOrWhiteSpace(searchWord))"><Translate Text="Buscar" /></ButtonPrimary>
                        </div>
                    }
                    else if (isLoading)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden"><Translate Text="Loading..." /></span>
                            </div>
                            <p class="mt-2"><Translate Text="Searching..." /></p>
                        </div>
                    }
                    else
                    {
                        @if (definitionResult != null && definitionResult.Entries != null && definitionResult.Entries.Any())
                        {
                            <div class="mb-3">
                                <small class="text-muted">
                                    <Translate Text="Source: " /> @definitionResult.ProviderName
                                </small>
                            </div>

                            @foreach (var entry in definitionResult.Entries)
                            {
                                <div class="card mb-3">
                                    <div class="card-header">
                                        <h5 class="mb-0">
                                            @entry.Headword
                                            @if (!string.IsNullOrEmpty(entry.PartOfSpeech))
                                            {
                                                <span class="badge bg-primary ms-2">@entry.PartOfSpeech</span>
                                            }
                                            @if (!string.IsNullOrEmpty(entry.Pronunciation))
                                            {
                                                <small class="text-muted ms-2">/@entry.Pronunciation/</small>
                                            }
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        @if (entry.Meanings != null && entry.Meanings.Any())
                                        {
                                            <div class="list-group list-group-flush">
                                                @foreach (var meaning in entry.Meanings)
                                                {
                                                    <div class="list-group-item">
                                                        <div class="d-flex justify-content-between align-items-start">
                                                            <div class="flex-grow-1">
                                                                @if (!string.IsNullOrEmpty(meaning.Definition))
                                                                {
                                                                    <div class="mb-1">
                                                                        <span class="text-primary fw-semibold">@meaning.Definition</span>
                                                                    </div>
                                                                }
                                                                @if (!string.IsNullOrEmpty(meaning.Translation))
                                                                {
                                                                    <div class="mb-2">
                                                                        <span class="text-success">→ @meaning.Translation</span>
                                                                    </div>
                                                                }
                                                                @if (meaning.Examples != null && meaning.Examples.Any())
                                                                {
                                                                    <div class="mt-2">
                                                                        <small class="text-muted d-block mb-1">
                                                                            <Translate Text="Examples:" />
                                                                        </small>
                                                                        @foreach (var example in meaning.Examples)
                                                                        {
                                                                            <div class="ms-3 mb-1">
                                                                                <small class="text-muted fst-italic">• @example</small>
                                                                            </div>
                                                                        }
                                                                    </div>
                                                                }
                                                            </div>
                                                            <div class="ms-2">
                                                                <ButtonPrimary OnClick="() => AddToDeck(meaning.Definition, meaning.Translation)">
                                                                    <i class="fa fa-plus"></i>
                                                                </ButtonPrimary>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-0"><Translate Text="No meanings available" /></p>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p><Translate Text="No results found" /></p>
                        }
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <ButtonPrimary OnClick="StartNewSearch"><Translate Text="Nova busca" /></ButtonPrimary>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string searchWord;
    private DefinitionResult definitionResult;
    private bool showModal = false;
    private bool isSearching = true;
    private bool isLoading = false;

    private void OpenModal()
    {
        searchWord = string.Empty;
        definitionResult = null;
        isSearching = true;
        isLoading = false;
        showModal = true;
    }

    private async Task Search()
    {
        if (string.IsNullOrWhiteSpace(searchWord))
            return;

        isSearching = false;
        isLoading = true;

        try
        {
            var provider = TargetLanguageService.GetDefinitionProviders().FirstOrDefault();
            
            if (provider == null)
            {
                isLoading = false;
                isSearching = true;
                return;
            }

            definitionResult = await provider.GetDefinitionsAsync(searchWord);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error searching for word: {ex.Message}");
            definitionResult = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddToDeck(string sourceText, string translation)
    {
        if (string.IsNullOrWhiteSpace(sourceText) || string.IsNullOrWhiteSpace(translation))
            return;

        // URL encode the texts to safely pass them as parameters
        var encodedSource = Uri.EscapeDataString(sourceText);
        var encodedTranslation = Uri.EscapeDataString(translation);
        
        // Navigate with both text and translation, plus redirect back to search
        var navigationUrl = $"/create-card/{encodedSource}/{encodedTranslation}?redirect=/dict";
        
        Navigation.NavigateTo(navigationUrl);
        
        // Close the modal
        CloseModal();
    }

    private void StartNewSearch()
    {
        searchWord = string.Empty;
        definitionResult = null;
        isSearching = true;
    }

    private void CloseModal()
    {
        showModal = false;
        searchWord = string.Empty;
        definitionResult = null;
        isSearching = true;
        isLoading = false;
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(searchWord))
        {
            await Search();
        }
    }

    private string GetAvailablePair()
    {
        var codes = new[] { AvailableCodes.English, TargetLanguageCode };
        Array.Sort(codes);
        return string.Concat(codes);
    }
}
