@page "/dict"
@using Infrastructure.Lookup
@using Infrastructure.Services
@inherits SmartComponent

<div class="gap-2 p-2">
    <h3 class="mb-3"><Translate Text="Dicionário (Dict.cc)" /></h3>
    <ButtonPrimary OnClick="OpenModal"><Translate Text="Buscar" /></ButtonPrimary>
</div>

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @if (isSearching)
                        {
                            <Translate Text="Digite o termo de busca" />
                        }
                        else
                        {
                            <Translate Text="Resultados para " />
                            @searchWord
                        }
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (isSearching)
                    {
                        <div class="mb-3">
                            <input id="searchInput" 
                                   class="form-control" 
                                   @bind="searchWord" 
                                   @bind:event="oninput"
                                   @onkeypress="HandleKeyPress"
                                   placeholder="@Translate("Escreva uma palavra")" 
                                   autofocus />
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal"><Translate Text="Cancelar" /></button>
                            <ButtonPrimary OnClick="Search" Disabled="@(string.IsNullOrWhiteSpace(searchWord))"><Translate Text="Buscar" /></ButtonPrimary>
                        </div>
                    }
                    else if (isLoading)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden"><Translate Text="Loading..." /></span>
                            </div>
                            <p class="mt-2"><Translate Text="Searching..." /></p>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(translationsHtml))
                        {
                            @((MarkupString)translationsHtml)
                        }
                        else
                        {
                            <p><Translate Text="No results found" /></p>
                        }
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <ButtonPrimary OnClick="StartNewSearch"><Translate Text="Nova busca" /></ButtonPrimary>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string searchWord;
    private string translationsHtml;
    private bool showModal = false;
    private bool isSearching = true;
    private bool isLoading = false;

    private void OpenModal()
    {
        searchWord = string.Empty;
        translationsHtml = string.Empty;
        isSearching = true;
        isLoading = false;
        showModal = true;
    }

    private async Task Search()
    {
        if (string.IsNullOrWhiteSpace(searchWord))
            return;

        isSearching = false;
        isLoading = true;

        var client = TargetLanguageService.GetDefinitionProviders().First();

        translationsHtml = await client.GetDefinitionsHtmlAsync(searchWord);
        isLoading = false;
    }

    private void StartNewSearch()
    {
        searchWord = string.Empty;
        translationsHtml = string.Empty;
        isSearching = true;
    }

    private void CloseModal()
    {
        showModal = false;
        searchWord = string.Empty;
        translationsHtml = string.Empty;
        isSearching = true;
        isLoading = false;
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(searchWord))
        {
            await Search();
        }
    }

    private string GetAvailablePair()
    {
        var codes = new[] { AvailableCodes.English, TargetLanguageCode };
        Array.Sort(codes);
        return string.Concat(codes);
    }
}
