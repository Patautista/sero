@using Infrastructure.Vocab
@using Infrastructure.Interfaces
@using Infrastructure.Services
@using System.Globalization
@inject NavigationManager Navigation
@inherits SmartComponent

<div class="gap-2 p-2">
    <h3 class="mb-3"><Translate Text="Buscar exemplos (Tatoeba)" /></h3>
    <ButtonPrimary OnClick="OpenModal"><Translate Text="Buscar" /></ButtonPrimary>
</div>

@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        @if (isSearching)
                        {
                            <Translate Text="Digite o termo de busca" />
                        }
                        else
                        {
                            <Translate Text="Resultados para " />
                            @searchQuery
                        }
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    @if (isSearching)
                    {
                        <div class="mb-3">
                            <input id="searchInput" 
                                   class="form-control" 
                                   @bind="searchQuery" 
                                   @bind:event="oninput"
                                   @onkeypress="HandleKeyPress"
                                   placeholder="@Translate("Escreva uma palavra ou frase")" 
                                   autofocus />
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" @bind="exactSearch" id="exactSearchCheck">
                            <label class="form-check-label" for="exactSearchCheck">
                                <Translate Text="Busca exata" />
                            </label>
                        </div>
                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @onclick="CloseModal"><Translate Text="Cancelar" /></button>
                            <ButtonPrimary OnClick="Search" Disabled="@(string.IsNullOrWhiteSpace(searchQuery))"><Translate Text="Buscar" /></ButtonPrimary>
                        </div>
                    }
                    else if (isLoading)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden"><Translate Text="Carregando..." /></span>
                            </div>
                            <p class="mt-2"><Translate Text="Buscando..." /></p>
                        </div>
                    }
                    else
                    {
                        @if (searchResult != null && searchResult.Examples != null && searchResult.Examples.Any())
                        {
                            <div class="mb-3">
                                <p class="text-muted"><Translate Text="Total results: " /> @searchResult.TotalResults</p>
                            </div>
                            <div class="list-group">
                                @foreach (var example in searchResult.Examples)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between align-items-start">
                                            <div class="flex-grow-1">
                                                <div class="d-flex align-items-center gap-2">
                                                    <h6 class="mb-1 flex-grow-1">@example.Text</h6>
                                                    <ButtonPrimary 
                                                        OnClick="() => AddToDeck(example.Text)">
                                                        <i class="fa fa-plus"></i>
                                                    </ButtonPrimary>
                                                </div>
                                                @if (!string.IsNullOrEmpty(example.Translation))
                                                {
                                                    <p class="text-muted mb-1 fst-italic">
                                                        @example.Translation
                                                    </p>
                                                }
                                                else if (IsApiLive && !string.IsNullOrEmpty(example.Id) && sentenceTranslations.ContainsKey(example.Id))
                                                {
                                                    <p class="text-muted mb-1 fst-italic">
                                                        @sentenceTranslations[example.Id]
                                                    </p>
                                                }
                                                else if (IsApiLive && isLoadingTranslations)
                                                {
                                                    <div class="spinner-border spinner-border-sm text-muted" role="status">
                                                        <span class="visually-hidden"><Translate Text="Carregando..." /></span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(example.Source))
                                                {
                                                    <small class="text-muted">@example.Source</small>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p><Translate Text="No results found" /></p>
                        }
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <ButtonPrimary OnClick="StartNewSearch"><Translate Text="Nova busca" /></ButtonPrimary>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
    
@code {
    private string searchQuery;
    private bool exactSearch = true;
    private ExampleSearchResult searchResult;
    private Dictionary<string, string> sentenceTranslations = new();
    private bool showModal = false;
    private bool isSearching = true;
    private bool isLoading = false;
    private bool isLoadingTranslations = false;

    private void OpenModal()
    {
        searchQuery = string.Empty;
        searchResult = null;
        sentenceTranslations.Clear();
        isSearching = true;
        isLoading = false;
        isLoadingTranslations = false;
        exactSearch = true;
        showModal = true;
    }

    private async Task Search()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
            return;

        isSearching = false;
        isLoading = true;

        // Get the first available example provider
        var provider = TargetLanguageService.GetExampleProviders().FirstOrDefault();
        
        if (provider == null)
        {
            isLoading = false;
            isSearching = true;
            return;
        }

        searchResult = await provider.SearchExamplesAsync(
            query: searchQuery,
            languageCode: GetTargetLanguageCode(),
            exactMatch: exactSearch
        );

        isLoading = false;

        // Load translations if API is available and provider doesn't include them
        if (IsApiLive && !provider.SupportsTranslations && searchResult?.Examples != null && searchResult.Examples.Any())
        {
            await LoadTranslationsAsync();
        }
    }

    private async Task LoadTranslationsAsync()
    {
        isLoadingTranslations = true;
        sentenceTranslations.Clear();

        try
        {
            var translationTasks = searchResult.Examples
                .Where(e => string.IsNullOrEmpty(e.Translation)) // Only translate if no translation exists
                .Select(async example =>
                {
                    var translation = await TranslateAsync(
                        example.Text, 
                        TargetLanguageCode
                    );
                    
                    if (!string.IsNullOrEmpty(translation) && translation != example.Text)
                    {
                        // Use the example's ID if available, otherwise use the text as key
                        var key = example.Id ?? example.Text;
                        return (key, translation);
                    }
                    return ((string)null, (string)null);
                });

            var results = await Task.WhenAll(translationTasks);

            foreach (var (key, translation) in results)
            {
                if (!string.IsNullOrEmpty(key) && !string.IsNullOrEmpty(translation))
                {
                    sentenceTranslations[key] = translation;
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading translations: {ex.Message}");
        }
        finally
        {
            isLoadingTranslations = false;
            StateHasChanged();
        }
    }

    private void AddToDeck(string sentenceText)
    {
        // URL encode the sentence text and translation to safely pass them as parameters
        var encodedText = Uri.EscapeDataString(sentenceText);
        
        // Check if we have a translation available for this sentence
        var example = searchResult.Examples.FirstOrDefault(e => e.Text == sentenceText);
        string navigationUrl;
        
        // Try to get translation from example itself, or from our loaded translations
        string translation = example?.Translation;
        if (string.IsNullOrEmpty(translation) && example?.Id != null && sentenceTranslations.ContainsKey(example.Id))
        {
            translation = sentenceTranslations[example.Id];
        }
        else if (string.IsNullOrEmpty(translation) && sentenceTranslations.ContainsKey(sentenceText))
        {
            translation = sentenceTranslations[sentenceText];
        }
        
        if (!string.IsNullOrEmpty(translation))
        {
            var encodedTranslation = Uri.EscapeDataString(translation);
            // Navigate with both text and translation, plus redirect back to search
            navigationUrl = $"/create-card/{encodedText}/{encodedTranslation}?redirect=/search";
        }
        else
        {
            // Navigate with just the text and redirect parameter
            navigationUrl = $"/create-card/{encodedText}?redirect=/search";
        }
        
        Navigation.NavigateTo(navigationUrl);
        
        // Close the modal
        CloseModal();
    }

    private void StartNewSearch()
    {
        searchQuery = string.Empty;
        searchResult = null;
        sentenceTranslations.Clear();
        isSearching = true;
        isLoadingTranslations = false;
    }

    private void CloseModal()
    {
        showModal = false;
        searchQuery = string.Empty;
        searchResult = null;
        sentenceTranslations.Clear();
        isSearching = true;
        isLoading = false;
        isLoadingTranslations = false;
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(searchQuery))
        {
            await Search();
        }
    }

    private string GetTargetLanguageCode()
    {
        // Map your internal language codes to ISO 639-3 codes
        // (e.g., "eng", "por", "ita", "deu", "fra", "nob")
        if(TargetLanguageCode == "no")
        {
            return new CultureInfo("nb").ThreeLetterISOLanguageName;
        }

        return TargetLanguage.ThreeLetterISOLanguageName;
    }
}