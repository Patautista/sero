@using System.Text
@using Business.Model
@using Business.ViewModel
@using CommunityToolkit.Maui.Alerts;
@using Domain
@using Domain.Events
@using MauiApp1.Services
@inject Business.AnswerEvaluator AnswerEvaluator
@using MauiApp1.Services.Audio
@inherits ChallengeComponentBase

<div class="card-content transition-all duration-300 ease-in-out" style="filter: blur(@(isInputFocused ? "2px" : "0")); transform: scale(@(isInputFocused ? "0.95" : "1"));">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h1 class="text-xl font-medium">Traduza para o @TargetLanguage.DisplayName</h1>

        @if (_challengeState.ExpEarned.HasValue)
        {
            <div class="exp-badge">
                +@_challengeState.ExpEarned EXP
            </div>
        }
    </div>

    @if (CurrentCard.Repetitions == 0)
    {
        <div class="bg-sky-100 border-l-4 border-sky-500 text-sky-800 p-3 rounded-lg shadow-md mb-4" role="alert">
            <p class="mb-0 text-sm font-medium">
                Novo card! Resposta: <strong class="font-semibold">@CurrentCard.TargetSample.Text</strong>
            </p>
        </div>
    }
</div>

<p class="w-fit mb-5 mt-3 text-gray-950 animated-underline">@CurrentCard.NativeSample.Text</p>
<input class="w-full form-control mb-2 p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all" @bind="_challengeState.UserAnswer" placeholder="Resposta" @onfocus="() => isInputFocused = true" @onblur="() => isInputFocused = false" />

<div class="card-buttons transition-all duration-300 ease-in-out">
    <div class="flex justify-between">
        <div style="filter: blur(@(isInputFocused ? "2px" : "0")); transform: scale(@(isInputFocused ? "0.95" : "1"));">
            <ButtonSecondary OnClick="SkipCard"><Translate Text="Pular"></Translate></ButtonSecondary>
        </div>
        <ButtonPrimary OnClick="CheckAnswer"><Translate Text="Conferir"></Translate></ButtonPrimary>
    </div>

    @if (_challengeState.Feedback is not null)
    {
        <div class="mt-4">
            <div>
                <span>@_challengeState.Feedback.MainMessage</span>
            </div>
            @if (_challengeState.Feedback.ExpectedAnswer is not null)
            {
                <div class="text-sm text-gray-700 mt-2">
                    <strong>Resposta esperada:</strong> @_challengeState.Feedback.ExpectedAnswer
                </div>
            }
            @if (_challengeState.Feedback.Hint is not null)
            {
                <div class="text-xs text-gray-500 mt-1">
                    <strong>Dica:</strong> @_challengeState.Feedback.Hint
                </div>
            }
        </div>
    }

    @if (_challengeState.AnswerQuality != AnswerQuality.Perfect)
    {
        <div class="mt-4 text-center">
            <p class="text-sm text-gray-600 mb-2"><Translate Text="Sua resposta estava correta?"></Translate></p>
            <button class="btn btn-sm btn-outline-success" @onclick="ForceCorrectAnswer">
                <Translate Text="Sim, aceitar como resposta correta"></Translate>
            </button>
        </div>
    }

    <NextCardCountdown Countdown="@_challengeState.Countdown" />
</div>

@code {
    [Parameter] public SrsCard CurrentCard { get; set; }

    protected override string ChallengeTypeName => "TextChallenge";
    protected override SrsCard CurrentSrsCard => CurrentCard;

    private async Task CheckAnswer()
    {
        if (string.IsNullOrWhiteSpace(_challengeState.UserAnswer) || _challengeState.Countdown > 0) return;

        _challengeState.AnswerTime = DateTime.UtcNow - _challengeState.CardShownAt;

        var possibleAnswers = CurrentCard.SentencesInTargetLanguage.Select(c => c.Text).ToList();
        var evaluation = await AnswerEvaluator.Evaluate(CurrentCard.NativeSample.Text, _challengeState.UserAnswer, possibleAnswers);

        _challengeState.IsCorrect = evaluation.Quality != AnswerQuality.Wrong;
        _challengeState.AnswerQuality = evaluation.Quality;

        if (_challengeState.IsCorrect)
        {
            _challengeState.ExpEarned = ExpCalculator.CalculateEarnedExp(CurrentCard, CurrentCard.Repetitions);
            await PlayCorrectAnswer();
            await Task.Delay(500);
            await PlayVoiceClip(evaluation.ClosestMatch, CurrentCard.TargetSample.Language);
        }

        Srs.Review(CurrentCard, evaluation.Quality);
        _challengeState.Feedback = AnswerEvaluator.BuildFeedbackMessage(evaluation, _challengeState.UserAnswer);

        await SaveCardAnsweredEvent(_challengeState.IsCorrect);

        StartCountdown(_challengeState.AnswerQuality == AnswerQuality.Perfect ? 3 : 7);

        StateHasChanged();
    }
}

