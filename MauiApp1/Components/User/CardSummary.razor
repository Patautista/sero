@using Business.Model
@inherits MauiApp1.Components.SmartComponent

<div class="card shadow-md rounded-lg overflow-hidden bg-gray-50 transition-all duration-200 transform hover:translate-y-[-5px] relative @(_isEditMode ? "ring-2 ring-indigo-400" : "")"
     @onpointerdown="HandlePointerDown"
     @onpointerup="HandlePointerUp"
     @onpointercancel="HandlePointerCancel"
     @onpointerleave="HandlePointerCancel">
    
    <!-- Delete Button (visible in edit mode) -->
    @if (_isEditMode && OnDelete.HasDelegate)
    {
        <button @onclick="OnDeleteClicked" 
                class="absolute -top-2 -right-2 w-8 h-8 bg-red-500 text-white rounded-full shadow-lg hover:bg-red-600 transition flex items-center justify-center z-10"
                title="Excluir cartão">
            <span class="text-xl leading-none">−</span>
        </button>
    }

    <div class="p-4">
        @if (_isEditMode && OnEditConfirm.HasDelegate)
        {
            <button class="absolute top-2 right-2 text-indigo-600 hover:text-indigo-800 p-2 rounded-lg hover:bg-indigo-50 transition"
                    @onclick="EnableEditMode"
                    title="Editar cartão">
                <span class="text-lg">✏️</span>
            </button>
        }

        @if (!isEditMode)
        {
            <p class="text-sm text-gray-500 mb-2">
                <span class="font-medium text-gray-700">@Card.NativeSample.Language.ToUpper():</span> @Card.NativeSample.Text
            </p>
            <p class="text-lg font-bold mb-2 text-indigo-800 flex items-center gap-2">
                <span>@Card.TargetSample.Text</span>
                <button class="text-indigo-600 hover:text-indigo-800 transition-colors"
                        @onclick="PlayTargetAudio"
                        title="Reproduzir áudio">
                    <i class="fa fa-play-circle"></i>
                </button>
            </p>
            <div class="flex flex-wrap gap-1 mb-2">
                @foreach (var tag in Card.Tags)
                {
                    <span class="badge bg-indigo-200 text-slate-800 px-2 py-1 rounded-full text-xs font-medium">@tag.Name</span>
                }
                @if (false)
                {
                    <span class="badge bg-green-200 text-green-800 px-2 py-1 rounded-full text-xs font-medium">@Card.DifficultyLevel</span>
                }
            </div>
            <div class="text-xs text-gray-600">
                <p class="mb-1">
                    <span class="font-medium"><Translate Text="Próxima Revisão:"></Translate></span> @Card.NextReview.ToString("MMM dd, yyyy")
                </p>
                @if (Card.LastReviewed != DateTime.MinValue)
                {
                    <p>
                        <span class="font-medium"><Translate Text="Última Revisão:"></Translate></span> @Card.LastReviewed.ToString("MMM dd, yyyy")
                    </p>
                }
            </div>
        }
        else
        {
            <div class="mb-2">
                <label class="block text-xs text-gray-600">Frase Nativa</label>
                <input class="w-full px-2 py-1 border rounded" @bind="editModel.NativeSentence" />
            </div>
            <div class="mb-2">
                <label class="block text-xs text-gray-600">Frase Alvo</label>
                <input class="w-full px-2 py-1 border rounded" @bind="editModel.TargetSentence" />
            </div>
            @if (false)
            {
                <div class="mb-2">
                    <label class="block text-xs text-gray-600">Dificuldade</label>
                    <select class="w-full px-2 py-1 border rounded" @bind="editModel.DifficultyLevel">
                        @foreach (DifficultyLevel level in Enum.GetValues(typeof(DifficultyLevel)))
                        {
                            <option value="@level">@level</option>
                        }
                    </select>
                </div>
            }
            <div class="mb-2">
                <label class="block text-xs text-gray-600">Tags (separadas por vírgula)</label>
                <input class="w-full px-2 py-1 border rounded" @bind="tagsInput" />
            </div>
            <div class="flex gap-2 mt-4">
                <button class="px-3 py-1 bg-green-600 text-white rounded hover:bg-green-700"
                        @onclick="OnConfirmEdit"
                        title="Salvar alterações">
                    <i class="fa fa-check-circle"></i> Salvar
                </button>
                <button class="px-3 py-1 bg-gray-600 text-white rounded hover:bg-gray-700"
                        @onclick="CancelEdit"
                        title="Cancelar">
                    <i class="fa fa-times"></i> Cancelar
                </button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public SrsCard Card { get; set; } = new();

    [Parameter]
    public EventCallback OnDelete { get; set; }

    [Parameter]
    public EventCallback<CardDefinition> OnEditConfirm { get; set; }

    [Parameter]
    public bool IsEditMode { get; set; }

    [Parameter]
    public EventCallback<SrsCard> OnLongPress { get; set; }

    private bool isEditMode = false;
    private bool _isEditMode => IsEditMode;
    private CardDefinition editModel = new();
    private string tagsInput = "";

    private System.Threading.Timer? _longPressTimer;
    private bool _isLongPressTriggered = false;

    private void HandlePointerDown()
    {
        if (!IsEditMode && OnLongPress.HasDelegate)
        {
            _isLongPressTriggered = false;
            _longPressTimer?.Dispose();
            _longPressTimer = new System.Threading.Timer(_ =>
            {
                _isLongPressTriggered = true;
                InvokeAsync(() =>
                {
                    OnLongPress.InvokeAsync(Card);
                    StateHasChanged();
                });
            }, null, 800, System.Threading.Timeout.Infinite);
        }
    }

    private void HandlePointerUp()
    {
        _longPressTimer?.Dispose();
        _longPressTimer = null;
    }

    private void HandlePointerCancel()
    {
        _longPressTimer?.Dispose();
        _longPressTimer = null;
        _isLongPressTriggered = false;
    }

    public void Dispose()
    {
        _longPressTimer?.Dispose();
    }

    private void EnableEditMode()
    {
        isEditMode = true;
        editModel = new CardDefinition
        {
            NativeLanguageCode = Card.NativeSample.Language,
            TargetLanguageCode = Card.TargetSample.Language,
            NativeSentence = Card.NativeSample.Text,
            TargetSentence = Card.TargetSample.Text,
            Tags = Card.Tags.ToList(),
            DifficultyLevel = Card.DifficultyLevel
        };
        tagsInput = string.Join(", ", Card.Tags.Select(t => t.Name));
    }

    private void CancelEdit()
    {
        isEditMode = false;
    }

    private async Task OnDeleteClicked()
    {
        if (OnDelete.HasDelegate)
            await OnDelete.InvokeAsync(Card);
    }

    private async Task OnConfirmEdit()
    {
        // Parse tags from input
        editModel.Tags = tagsInput.Split(',', StringSplitOptions.RemoveEmptyEntries)
            .Select(t => new Tag { Name = t.Trim(), Type = "" }).ToList();

        if (OnEditConfirm.HasDelegate)
            await OnEditConfirm.InvokeAsync(editModel);

        isEditMode = false;
    }

    private async Task PlayTargetAudio()
    {
        await PlayVoiceClip(Card.TargetSample.Text, Card.TargetSample.Language);
    }
}